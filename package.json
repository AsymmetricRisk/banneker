{
  "name": "banneker",
  "version": "0.3.0",
  "description": "Project planning and documentation pipeline for AI coding assistants",
  "type": "module",
  "bin": {
    "banneker": "bin/banneker.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT",
  "author": "Daniel Jackson",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AsymmetricRisk/banneker.git"
  },
  "homepage": "https://github.com/AsymmetricRisk/banneker#readme",
  "bugs": {
    "url": "https://github.com/AsymmetricRisk/banneker/issues"
  },
  "keywords": [
    "project-planning",
    "documentation",
    "ai-coding-assistant",
    "claude-code",
    "opencode",
    "gemini",
    "cli",
    "developer-tools",
    "architecture-diagrams",
    "survey"
  ],
  "files": [
    "bin/",
    "lib/",
    "templates/",
    "VERSION"
  ],
  "scripts": {
    "test": "node --test \"test/unit/**/*.test.js\" \"test/integration/**/*.test.js\" \"test/smoke/**/*.test.js\"",
    "test:unit": "node --test \"test/unit/**/*.test.js\"",
    "test:integration": "node --test \"test/integration/**/*.test.js\"",
    "test:smoke": "node --test \"test/smoke/**/*.test.js\"",
    "test:coverage": "node --test --experimental-test-coverage \"test/unit/**/*.test.js\" \"test/integration/**/*.test.js\" \"test/smoke/**/*.test.js\"",
    "test:coverage-strict": "node scripts/test-with-thresholds.js",
    "changelog": "auto-changelog --package --output CHANGELOG.md --commit-limit false"
  },
  "devDependencies": {
    "auto-changelog": "^2.5.0"
  }
}
